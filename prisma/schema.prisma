generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model GuestParty {
  id                Int               @id @default(autoincrement())
  partyName         String            @unique
  token             String            @unique
  guestType         String
  inviteCode        String            @unique
  dietary           String?
  fridayParty       Boolean?
  paid              Boolean?
  needsBus          Boolean?
  accommodationCost  Int?
  cabinId           Int?
  cabin             Cabin?            @relation(fields: [cabinId], references: [id])
  guests            IndividualGuest[]
  rsvpLocked        Boolean? @default(false)
  bookingReference   String?         
}

model IndividualGuest {
  id        String      @id @default(cuid())
  partyId   Int
  firstName String
  lastName  String
  rsvp      RSVPStatus? @default(Pending)
  isChild   Boolean?
  isBaby    Boolean?
  age       Int?
  note      String?
  relation  String?

  party  GuestParty @relation(fields: [partyId], references: [id])
  roomId Int?
  room   Room?      @relation(fields: [roomId], references: [id])
}

enum GuestType {
  OnSite
  OtherAccommodation
  AccommodationNotOffered
}

enum RSVPStatus {
  Yes
  No
  Pending
}

model Cabin {
  id                 Int          @id @default(autoincrement())
  name               String
  rooms              Room[]
  imageFileName      String?       // Optional image filename stored in /public/images/
  videoUrl           String?       // Optional embedded YouTube URL
  capacity           Int? 
  roomCount          Int? 
  hotTub             String?
  parties            GuestParty[]
  checkIn            String?
  checkOut           String?
}

model Room {
  id       Int               @id @default(autoincrement())
  name     String
  roomType String
  capacity Int
  enSuite  Boolean
  cabinId  Int
  cabin    Cabin             @relation(fields: [cabinId], references: [id])
  guests   IndividualGuest[]
}
