generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model GuestParty {
  id                Int               @id @default(autoincrement())
  partyName         String
  token             String
  guestType         String
  inviteCode        String
  fridayParty       Boolean
  paid              Boolean
  needsBus          Boolean
  accommodationCost Int
  cabinId           Int?
  cabin             Cabin?            @relation(fields: [cabinId], references: [id])
  guests            IndividualGuest[] // âœ… FIXED
}

model IndividualGuest {
  id        String      @id @default(cuid())
  partyId   Int
  firstName String
  lastName  String
  dietary   String?
  rsvp      RSVPStatus? @default(Pending)
  isChild   Boolean?
  age       Int?
  note      String?

  party  GuestParty @relation(fields: [partyId], references: [id])
  roomId Int?
  room   Room?      @relation(fields: [roomId], references: [id])
}

enum GuestType {
  OnSite
  OtherAccommodation
  DayEveningOnly
}

enum RSVPStatus {
  Yes
  No
  Pending
}

model Cabin {
  id          Int          @id @default(autoincrement())
  name        String
  rooms       Room[]
  parties     GuestParty[] // ðŸ‘ˆ NEW: back relation (optional)
}

model Room {
  id       Int               @id @default(autoincrement())
  name     String
  roomType String
  capacity Int
  enSuite  Boolean
  cabinId  Int
  cabin    Cabin             @relation(fields: [cabinId], references: [id])
  guests   IndividualGuest[] // ðŸ‘ˆ Back relation
}
